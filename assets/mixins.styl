hwpx(h,w=h)
  height ((h)px)
  width ((w)px)
hw(h,w=h)
  height ((h)%)
  width ((w)%)
hwe(h,w=h)
  height ((h)em)
  width ((w)em)
hwv(h,w=h)
  height (h)vh
  width (w)vw


he(h)
  height (h)em
we(w)
  width (w)em
hr(h)
  height (h)rem
wr(w)
  width (w)rem


mm(min, max=1)
  minmax((min)em, (max)fr)


gci()
  display grid
  place-items center
gcc()
  display grid
  place-content: center
gcs()
  display grid
  place-self center

ac()
  align-content center
  justify-items center



ddd()
  transform-style preserve-3d
d3()
  transform-style preserve-3d



rdup(x=0,y=0,z=0)
  transform translate3d((x)%,(y)%,(z)em)

rdu(x=0,y=0,z=0)
  transform translate3d(x, y, z)





tr(args...)
  transform: args

r(arg)
  translateX(arg)
l(arg)
  translateX(-(arg))

d(arg)
  translateY(arg)
u(arg)
  translateY(-(arg))

t(arg) // towards
  translateZ(arg)

s(x, y=x)
  scale(x, y)

sc(x, y=x)
  transform: scale(x, y)


right(x)
  transform translateX(x)
tright = right
tleft(x)
  transform translateX(-(x))
down(y)
  transform translateY(y)
tdown = down
ttop(y)
  transform translateY(-(y))
up(z)
  transform translateZ(z)

rd(x=0,y=0)
  transform translate(x, y)
rdem(x=0,y=0)
  transform translate((x)em, (y)em)

tl(x=0,y=0)
  top x
  left y



rx(x=0)
  rotateX((x)deg)
ry(y=0)
  rotateY((y)deg)
rz(z=0)
  rotateZ((z)deg)


rotx(x=0)
  transform rotateX((x)deg)
roty(y=0)
  transform rotateY((y)deg)
rotz(z=0)
  transform rotateZ((z)deg)


pitch(x)
  transform rotateX((x)turn)
yaw(y)
  transform rotateY((y)turn)
roll(z)
  transform rotateZ((z)turn)

